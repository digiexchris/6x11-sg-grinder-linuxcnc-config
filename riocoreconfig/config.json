{
    "name": "IceShield",
    "description": "RIO-IceShield on Raspberry PI4",
    "boardcfg": "IceShield",
    "protocol": "SPI",
    "plugins": [
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:G"
                }
            },
            "frequency": 1.0
        },
        {
            "type": "spi",
            "pins": {
                "mosi": {
                    "pin": "14"
                },
                "miso": {
                    "pin": "17"
                },
                "sclk": {
                    "pin": "15"
                },
                "sel": {
                    "pin": "32"
                }
            }
        },
        {
            "type": "bitout",
            "name": "enable",
            "pins": {
                "bit": {
                    "pin": "45",
                    "modifier": [
                        {
                            "type": "onerror"
                        }
                    ]
                }
            }
        },
        {
            "name": "Stepper1",
            "type": "stepdir",
            "pins": {
                "step": {
                    "pin": "13"
                },
                "dir": {
                    "pin": "12"
                }
            },
            "is_joint": true,
            "joint": {
                "scale": 320.0,
                "ferror": 10.0,
                "max_velocity": 80.0
            }
        },
        {
            "name": "Stepper2",
            "type": "stepdir",
            "pins": {
                "step": {
                    "pin": "11"
                },
                "dir": {
                    "pin": "10"
                }
            },
            "is_joint": true,
            "joint": {
                "scale": 320.0,
                "ferror": 10.0,
                "max_velocity": 80.0
            }
        },
        {
            "name": "Stepper3",
            "type": "stepdir",
            "pins": {
                "step": {
                    "pin": "9"
                },
                "dir": {
                    "pin": "6"
                }
            },
            "is_joint": true,
            "joint": {
                "scale": 320.0,
                "ferror": 10.0,
                "max_velocity": 80.0
            }
        },
        {
            "type": "bitout",
            "name": "Output1",
            "pins": {
                "bit": {
                    "pin": "44",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ]
                }
            }
        },
        {
            "type": "bitout",
            "name": "Output2",
            "pins": {
                "bit": {
                    "pin": "43",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ]
                }
            }
        },
        {
            "type": "bitout",
            "name": "LED",
            "pins": {
                "bit": {
                    "pin": "LED:R",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ]
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input1",
            "pins": {
                "bit": {
                    "pin": "41",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input2",
            "pins": {
                "bit": {
                    "pin": "40",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input3",
            "pins": {
                "bit": {
                    "pin": "39",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input4",
            "pins": {
                "bit": {
                    "pin": "38",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input5",
            "pins": {
                "bit": {
                    "pin": "37",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input6",
            "pins": {
                "bit": {
                    "pin": "36",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input7",
            "pins": {
                "bit": {
                    "pin": "42",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "bitin",
            "name": "Input8",
            "pins": {
                "bit": {
                    "pin": "34",
                    "modifier": [
                        {
                            "type": "invert"
                        }
                    ],
                    "pull": "up"
                }
            }
        },
        {
            "type": "signal",
            "signals": {
                "value": {
                    "display": {
                        "section": "debug",
                        "title": "readwrite time",
                        "type": "number_s32"
                    },
                    "net": "rio.readwrite.time"
                }
            },
            "dir": "output",
            "name": "riotime"
        }
    ],
